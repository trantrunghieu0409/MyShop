<Page x:Class="ProjectMyShop.Views.ManageOrder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:ProjectMyShop.Views" xmlns:local1="clr-namespace:ProjectMyShop.Converter"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="650"
      Title="ManageOrder"
      Loaded="Page_Loaded">
    <Page.Resources>
        <local1:CurrencyConverter x:Key="currencyConverter"/>
        <local1:AbsoluteConverter x:Key="absoluteConverter"/>
    </Page.Resources>

    <materialDesign:Card Background="White" UniformCornerRadius="10" materialDesign:ShadowAssist.ShadowEdges="All">
        <StackPanel Orientation="Vertical" Margin="20">
            <TextBlock Text="Order status" FontWeight="Normal" FontSize="16"/>
            <TextBlock Text="Overview of Lastest Orders" FontWeight="DemiBold" Foreground="Gray" FontSize="12"/>
            <StackPanel Orientation="Horizontal" Margin="0,20">
                <Button Name="AddButton" Click="AddMenuItem_Click" 
                        materialDesign:ButtonAssist.CornerRadius="5"
                        Background="DeepPink"
                        materialDesign:ShadowAssist.ShadowEdges="All"
                        BorderBrush="DeepPink"
                        Margin="5">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AddCircle"/>
                            <TextBlock Margin="10,0" Text="Add"></TextBlock>
                        </StackPanel>
                    </Button.Content>
                </Button>

                <Button Name="UpdateButton" Click="UpdateMenuItem_Click"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        Background="LightGray"
                        BorderBrush="LightGray"
                        materialDesign:ShadowAssist.ShadowEdges="All"
                        Foreground="Gray"
                        Margin="5">
                    <Button.Content>
                        <materialDesign:PackIcon Kind="Update"/>
                    </Button.Content>
                </Button>

                <Button Name="DeleteButton" Click="DeleteMenuItem_Click"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        Background="LightGray"
                        BorderBrush="LightGray"
                        materialDesign:ShadowAssist.ShadowEdges="All"
                        Foreground="Gray"
                        Margin="5">
                    <Button.Content>
                        <materialDesign:PackIcon Kind="Delete"/>
                    </Button.Content>
                </Button>
            </StackPanel>

            <DataGrid x:Name="OrderDataGrid" AutoGenerateColumns="True" Style="{StaticResource MaterialDesignDataGrid}"/>

            <DockPanel HorizontalAlignment="Stretch" LastChildFill="True" Margin="0,20">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <Button x:Name="PreviousButton" 
                            Content="&lt;"
                            Style="{StaticResource MaterialDesignFlatSecondaryButton}"
                            />
                    <!-- TEST BUTTONS -->
                    <Button x:Name="FirstButton"
                            Content="1"
                            Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                            Background="DeepPink"
                            BorderBrush="DeepPink"/>
                    <Button x:Name="SecondButton"
                            Content="2"
                            Style="{StaticResource MaterialDesignFlatSecondaryButton}"/>
                    <Button x:Name="ThirdButton"
                            Content="3"
                            Style="{StaticResource MaterialDesignFlatSecondaryButton}"/>
                    <Button x:Name="ForthButton"
                            Content="4"
                            Style="{StaticResource MaterialDesignFlatSecondaryButton}"/>
                
                    <ListView x:Name="PageButtons">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Button></Button>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                
                    <Button x:Name="NextButton" Content="&gt;"
                            Style="{StaticResource MaterialDesignFlatSecondaryButton}"/>

                </StackPanel>
                <TextBlock DockPanel.Dock="Left" Text="Showing 1 to 20 of 20 entries" VerticalAlignment="Center" FontWeight="Light"/>
            </DockPanel>
        </StackPanel>
    </materialDesign:Card>


</Page>
