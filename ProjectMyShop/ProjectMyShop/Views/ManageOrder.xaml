<Page x:Class="ProjectMyShop.Views.ManageOrder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:ProjectMyShop.Views" xmlns:local1="clr-namespace:ProjectMyShop.Converter"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="650"
      Title="ManageOrder"
      Loaded="Page_Loaded">
    <Page.Resources>
        <local1:StatusConverter x:Key="statusConverter"/>
        <local1:CurrencyConverter x:Key="currencyConverter"/>
    </Page.Resources>

    <materialDesign:Card Background="White" UniformCornerRadius="10" materialDesign:ShadowAssist.ShadowEdges="All">
        <StackPanel Orientation="Vertical" Margin="20">
            <TextBlock Text="Order status" FontWeight="Normal" FontSize="16"/>
            <TextBlock Text="Overview of Lastest Orders" FontWeight="DemiBold" Foreground="Gray" FontSize="12"/>
            <DockPanel LastChildFill="True">
                <StackPanel Orientation="Horizontal" Margin="0,20">
                    <Button Name="AddButton" Click="AddButton_Click" 
                        materialDesign:ButtonAssist.CornerRadius="5"
                        Background="DeepPink"
                        materialDesign:ShadowAssist.ShadowEdges="All"
                        BorderBrush="DeepPink"
                        Margin="5">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AddCircle"/>
                                <TextBlock Margin="10,0" Text="Add"></TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Button Name="UpdateButton" Click="UpdateButton_Click"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        Background="LightGray"
                        BorderBrush="LightGray"
                        materialDesign:ShadowAssist.ShadowEdges="All"
                        Foreground="Gray"
                        Margin="5">
                        <Button.Content>
                            <materialDesign:PackIcon Kind="Update"/>
                        </Button.Content>
                    </Button>

                    <Button Name="DeleteButton" Click="DeleteButton_Click"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        Background="LightGray"
                        BorderBrush="LightGray"
                        materialDesign:ShadowAssist.ShadowEdges="All"
                        Foreground="Gray"
                        Margin="5">
                        <Button.Content>
                            <materialDesign:PackIcon Kind="Delete"/>
                        </Button.Content>
                    </Button>

                </StackPanel>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                    <TextBlock Text="From" VerticalAlignment="Center" FontWeight="Bold" Foreground="MediumPurple" Margin="10,0"/>
                    <DatePicker SelectedDate="01/01/1990"/>
                    <TextBlock Text="To" VerticalAlignment="Center" FontWeight="Bold" Foreground="MediumPurple" Margin="10,0"/>
                    <DatePicker SelectedDate="01/01/1990"/>

                    <Button Name="SearchButton" Click="SearchButton_Click" Margin="10,0"
                        Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}">
                        <Button.Content>
                            <materialDesign:PackIcon Kind="Filter"/>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </DockPanel>
            

            <DataGrid x:Name="OrderDataGrid" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="#ID" Binding="{Binding ID}"/>
                    <DataGridTextColumn Header="Customer Name" Binding="{Binding CustomerName}"/>
                    <DataGridTextColumn Header="Address" Binding="{Binding Address}"/>
                    <DataGridTemplateColumn Header="Order Date">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <DatePicker SelectedDate="{Binding OrderDate}"></DatePicker>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status, Converter={StaticResource statusConverter}}"/>
                </DataGrid.Columns>
            </DataGrid>

            <DockPanel HorizontalAlignment="Stretch" LastChildFill="True" Margin="0,20">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <Button x:Name="PreviousButton" 
                            Content="&lt;"
                            Style="{StaticResource MaterialDesignFlatSecondaryButton}"
                            />
                    <!-- TEST BUTTONS -->
                    <Button x:Name="FirstButton"
                            Content="1"
                            Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                            Background="DeepPink"
                            BorderBrush="DeepPink"/>
                    <Button x:Name="SecondButton"
                            Content="2"
                            Style="{StaticResource MaterialDesignFlatSecondaryButton}"/>
                    <Button x:Name="ThirdButton"
                            Content="3"
                            Style="{StaticResource MaterialDesignFlatSecondaryButton}"/>
                    <Button x:Name="ForthButton"
                            Content="4"
                            Style="{StaticResource MaterialDesignFlatSecondaryButton}"/>
                
                    <ListView x:Name="PageButtons">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Button></Button>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                
                    <Button x:Name="NextButton" Content="&gt;"
                            Style="{StaticResource MaterialDesignFlatSecondaryButton}"/>

                </StackPanel>
                <TextBlock DockPanel.Dock="Left" Text="Showing 1 to 20 of 20 entries" VerticalAlignment="Center" FontWeight="Light"/>
            </DockPanel>
        </StackPanel>
    </materialDesign:Card>


</Page>
